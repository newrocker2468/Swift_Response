<script>
window.onload = () => {
    const lgn = document.getElementById("btn");
    const logged_in_cookie = document.cookie.split(";").some((item) => item.trim().startsWith("logged_in="));
    if (logged_in_cookie) {
        lgn.innerHTML = "Log Out";
    } else {
        lgn.innerHTML = "Log In";
    }
};
let checkloggedIn = () => {
    const logged_in_cookie = document.cookie.split(";").every((item) => item.trim().startsWith("logged_in="));
    if (logged_in_cookie) {
        document.cookie.split(";").forEach((c) => {
            document.cookie = c.replace(/^ +/, "").replace(/=.*/, "=;expires=" + new Date().toUTCString() + ";path=/");
        });
        window.location.href = "/index";
    } else {
        window.location.href = "/login";
    }
};

</script>